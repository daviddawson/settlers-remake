	<job name="checkhome3" type="NOT_FULL" material="SWORD" dx="4" dy="1" successjob="checkhome4" failjob="waithome" />
	<job name="checkhome4" type="POP_WEAPON" successjob="go_to_work1" failjob="waithome" />

